#!/usr/bin/env ruby

require_relative '../config/environment'
require_relative '../lib/game.rb'

def p_v_p
  g = Game.new
  g.play
end

def p_v_c
  first = ["X","O"].shuffle
  binding.pry
  c1 = Players::Computer.new(first[0])
  p1 = Players::Human.new(first[1])
  
  
  
  g = Game.new(c1, p1)
  g.play

  
end


puts "Hello!, Welcome to SUPER EXTREMELY normal Tic Tac Toe!"
puts "Please enter how many players will be playing"

input = ""

until input == "0" || input == "1" || input == "2" 

  input = gets.chomp
  case input
  when "0"
    c_v_c
  when "1"
    p_v_c
  when "2"
    p_v_p
  end
end



